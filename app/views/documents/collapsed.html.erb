<div class="w-full max-w-3xl mx-auto py-10 px-4">
  <%= render "shared/breadcrumbs", current_step: 3 %>
  <div class="text-center mb-8">
    <%# Celebration checkmark %>
    <div class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-emerald-500 shadow-lg shadow-green-500/30 mb-4 animate-celebrate">
      <svg width="28" height="28" class="text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
      </svg>
    </div>
    <h1 class="text-4xl font-bold text-gray-900 mb-2 animate-fade-in-up delay-100">Your Optimized Content</h1>
    <% if @document.selected_style %>
      <p class="text-lg text-indigo-600 font-semibold animate-fade-in-up delay-200">You chose: <%= @document.selected_style[:title] %></p>
    <% end %>
    <div class="mt-3 flex items-center justify-center gap-3">
      <span class="text-sm font-medium text-gray-600">Accessibility:</span>
      <%= button_to "Standard", profile_readability_path(mode: "standard"), method: :patch,
            form: { style: "display:inline" },
            class: "text-sm font-semibold px-5 py-2 rounded-lg border-2 cursor-pointer transition-colors #{dyslexia_strong_mode?(current_user) ? 'border-gray-300 text-gray-700 hover:bg-gray-50' : 'border-indigo-400 bg-indigo-50 text-indigo-700'}" %>
      <%= button_to "Strong", profile_readability_path(mode: "strong"), method: :patch,
            form: { style: "display:inline" },
            class: "text-sm font-semibold px-5 py-2 rounded-lg border-2 cursor-pointer transition-colors #{dyslexia_strong_mode?(current_user) ? 'border-indigo-400 bg-indigo-50 text-indigo-700' : 'border-gray-300 text-gray-700 hover:bg-gray-50'}" %>
    </div>
  </div>

  <%# Quick Summary â€” reduces cognitive load for long content %>
  <% summary_text = @document.transformations&.dig("_meta", "summary") %>
  <% if summary_text.blank? && @document.selected_content.present? %>
    <% # Fallback: extract first 2-3 sentences %>
    <% sentences = @document.selected_content.to_s.split(/(?<=[.!?])\s+/) %>
    <% summary_text = sentences.first(3).join(" ") if sentences.any? %>
  <% end %>
  <% if summary_text.present? %>
    <div class="rounded-2xl border p-5 mb-6 animate-fade-in-up delay-200"
         style="background-color: var(--color-accent-light, #eef2ff); border-color: var(--color-border);">
      <div class="flex items-center gap-2 mb-2">
        <svg width="20" height="20" class="text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="font-semibold text-sm" style="color: var(--color-text);">Quick Summary</h3>
      </div>
      <p class="text-sm leading-relaxed" style="color: var(--color-text-secondary, #4b5563);"><%= summary_text %></p>
    </div>
  <% end %>

  <%# Selected transformation displayed prominently %>
  <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden mb-6 animate-fade-in-up delay-300" data-controller="toggle speak">
    <div class="bg-indigo-50 border-b border-indigo-200 px-6 py-4">
      <% if @document.selected_style %>
        <h2 class="text-lg font-bold text-indigo-700"><%= @document.selected_style[:title] %></h2>
        <p class="text-sm text-indigo-600"><%= @document.selected_style[:description] %></p>
      <% end %>
    </div>

    <div class="px-6 py-5">
      <div data-toggle-target="transformed"
           data-speak-target="content"
           data-controller="reading-highlight"
           class="max-w-none text-gray-800 <%= dyslexia_reading_classes(current_user) %> p-5">
        <%= dyslexia_reading_html(@document.selected_content || "Transformation content will appear here.", current_user) %>
      </div>
      <div data-toggle-target="original" class="hidden max-w-none bg-amber-50 rounded-lg p-4 text-gray-700">
        <%= simple_format(@document.original_content || @document.extracted_text || "No original content available.") %>
      </div>
    </div>

    <div class="px-6 pb-5 flex items-center gap-3 flex-wrap">
      <button data-speak-target="button"
              data-action="speak#toggle"
              class="text-base text-emerald-600 font-semibold py-3 px-6 rounded-lg border-2 border-emerald-200 hover:bg-emerald-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
        Listen
      </button>
      <button data-toggle-target="button"
              data-action="toggle#toggle"
              class="text-base text-indigo-600 font-semibold py-3 px-6 rounded-lg border-2 border-indigo-200 hover:bg-indigo-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
        Show Original
      </button>
      <button data-action="accessibility#toggleFocusMode"
              class="text-base font-semibold py-3 px-6 rounded-lg border-2 border-purple-200 text-purple-600 hover:bg-purple-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">
        Focus Mode
      </button>
    </div>
  </div>

  <%# Text-to-Speech panel %>
  <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 mb-6" data-controller="tts">
    <div class="flex items-center gap-3 mb-4">
      <svg width="20" height="20" class="text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15.536 8.464a5 5 0 010 7.072M12 6a7 7 0 010 12M9 9a3 3 0 000 6"/>
      </svg>
      <h2 class="text-lg font-bold text-gray-900">Listen to this text</h2>
    </div>

    <% if @document.audio_url.present? %>
      <%# Audio player %>
      <audio data-tts-target="audio"
             controls
             class="w-full mb-5 rounded-lg"
             src="<%= @document.audio_url %>"
             aria-label="Generated speech audio">
        Your browser does not support the audio element.
      </audio>

      <%# Playback speed controls %>
      <div class="flex items-center gap-3 mb-5" role="group" aria-label="Playback speed">
        <span class="text-sm text-gray-600 font-semibold">Speed:</span>
        <% { "Slow" => 0.7, "Normal" => 1.0, "Fast" => 1.3 }.each do |label, rate| %>
          <button data-action="tts#setSpeed"
                  data-tts-speed-param="<%= rate %>"
                  class="text-sm font-semibold px-4 py-2 rounded-lg border-2 cursor-pointer hover:bg-indigo-50 hover:border-indigo-300 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 <%= rate == 1.0 ? 'bg-indigo-100 border-indigo-400 text-indigo-700' : 'border-gray-200 text-gray-700' %>">
            <%= label %>
          </button>
        <% end %>
      </div>

      <%# Regenerate with a different voice %>
      <%= form_with url: generate_speech_path(@document), method: :post, class: "flex items-center gap-3 flex-wrap" do |f| %>
        <label for="voice-select" class="text-sm text-gray-600 font-semibold">Change voice:</label>
        <%= f.select :voice,
              TTSService::VOICES.keys.map { |v| [ v.capitalize, v ] },
              {},
              id: "voice-select",
              class: "text-sm border-2 border-gray-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= f.submit "Regenerate",
              class: "text-sm text-indigo-600 font-semibold py-2 px-5 rounded-lg border-2 border-indigo-200 hover:bg-indigo-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <% end %>

    <% else %>
      <%# Generate speech form %>
      <p class="text-sm text-gray-500 mb-4">
        Convert the text above into natural-sounding audio with ElevenLabs.
        Speed can be adjusted after generation.
      </p>

      <%= form_with url: generate_speech_path(@document), method: :post, class: "flex items-center gap-3 flex-wrap" do |f| %>
        <label for="voice-select" class="text-sm text-gray-600 font-semibold">Voice:</label>
        <%= f.select :voice,
              TTSService::VOICES.keys.map { |v| [ v.capitalize, v ] },
              {},
              id: "voice-select",
              class: "text-sm border-2 border-gray-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= f.submit "Generate Speech",
              class: "text-sm text-white font-semibold py-2 px-5 rounded-lg bg-indigo-600 hover:bg-indigo-500 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <% end %>

      <p class="text-xs text-gray-400 mt-3">Powered by ElevenLabs</p>
    <% end %>
  </div>

  <%# Navigation %>
  <div class="flex items-center justify-between animate-fade-in-up delay-400">
    <%= link_to "Back to All Versions", results_path(@document),
          class: "inline-block text-base text-indigo-600 font-semibold py-3 px-6 rounded-xl border-2 border-indigo-200 hover:bg-indigo-50 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    <%= link_to "Upload New Document", upload_path,
          class: "inline-block text-base text-indigo-600 font-semibold py-3 px-6 rounded-xl border-2 border-indigo-200 hover:bg-indigo-50 transition-all focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
</div>
