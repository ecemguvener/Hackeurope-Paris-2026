<%# Collapsed view: selected transformation + TTS + quick actions %>
<%# Desktop: sticky left sidebar (controls) + right content area %>
<%# Mobile: content first, controls stacked below %>
<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

  <%# ── Page header ────────────────────────────────────────────────── %>
  <div class="flex flex-wrap items-start justify-between gap-4 mb-7 animate-fade-in">
    <div>
      <%# Success indicator %>
      <div class="flex items-center gap-2 mb-1.5">
        <div class="w-5 h-5 rounded-full bg-emerald-100 flex items-center justify-center flex-shrink-0" aria-hidden="true">
          <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <span class="text-sm font-medium text-emerald-700">Version selected</span>
      </div>

      <h1 class="text-2xl sm:text-3xl font-bold text-stone-800">Your Optimized Content</h1>

      <% if @document.selected_style %>
        <p class="text-stone-500 mt-1 text-sm">
          Reading in
          <strong class="text-indigo-600 font-semibold"><%= @document.selected_style[:title] %></strong>
          style
        </p>
      <% end %>
    </div>

    <%# Accessibility mode toggles %>
    <div class="flex items-center gap-2 flex-wrap" role="group" aria-label="Adjust reading accessibility mode">
      <span class="text-xs font-medium text-stone-400 uppercase tracking-wide">Mode:</span>
      <%= button_to "Standard", profile_readability_path(mode: "standard"), method: :patch,
            form: { class: "inline" },
            class: "text-xs px-3 py-1.5 rounded-full border font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 #{dyslexia_strong_mode?(current_user) ? 'border-stone-200 text-stone-500 hover:bg-stone-50' : 'border-indigo-300 bg-indigo-50 text-indigo-700'}" %>
      <%= button_to "Strong", profile_readability_path(mode: "strong"), method: :patch,
            form: { class: "inline" },
            class: "text-xs px-3 py-1.5 rounded-full border font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 #{dyslexia_strong_mode?(current_user) ? 'border-indigo-300 bg-indigo-50 text-indigo-700' : 'border-stone-200 text-stone-500 hover:bg-stone-50'}" %>
    </div>
  </div>

  <%# ── Two-column reading layout ─────────────────────────────────── %>
  <div class="reading-layout animate-fade-in-up delay-100">

    <%# ═══ LEFT SIDEBAR — controls ═══════════════════════════════════ %>
    <aside class="reading-sidebar space-y-4" aria-label="Document controls">

      <%# Style info %>
      <% if @document.selected_style %>
        <div class="bg-white rounded-2xl border border-stone-200 shadow-sm overflow-hidden">
          <div class="h-1 bg-gradient-to-r from-indigo-500 to-purple-500" aria-hidden="true"></div>
          <div class="p-4">
            <p class="text-xs font-semibold uppercase tracking-wider text-stone-400 mb-1.5">Selected style</p>
            <p class="font-bold text-stone-800 text-base"><%= @document.selected_style[:title] %></p>
            <p class="text-sm text-stone-500 mt-0.5 leading-snug"><%= @document.selected_style[:description] %></p>
          </div>
        </div>
      <% end %>

      <%# ─ TTS panel ─────────────────────────────────────────────── %>
      <div class="bg-white rounded-2xl border border-stone-200 shadow-sm overflow-hidden"
           data-controller="tts">
        <div class="h-1 bg-gradient-to-r from-violet-500 to-indigo-500" aria-hidden="true"></div>
        <div class="p-4">

          <%# Section heading %>
          <h2 class="flex items-center gap-1.5 text-xs font-semibold uppercase tracking-wider text-stone-400 mb-3">
            <svg class="w-3.5 h-3.5 text-indigo-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15.536 8.464a5 5 0 010 7.072M12 6a7 7 0 010 12M9 9a3 3 0 000 6"/>
            </svg>
            Listen
          </h2>

          <% if @document.audio_url.present? %>

            <%# ── Audio player ───────────────────────────────────── %>
            <audio data-tts-target="audio"
                   controls
                   class="w-full rounded-xl mb-4"
                   src="<%= @document.audio_url %>"
                   aria-label="Generated speech audio for your document">
              Your browser does not support the audio element.
            </audio>

            <%# Speed controls %>
            <div class="mb-4">
              <p class="text-xs font-medium text-stone-500 mb-2" id="speed-label">Playback speed</p>
              <div class="flex gap-1.5" role="group" aria-labelledby="speed-label">
                <% { "Slow" => 0.7, "Normal" => 1.0, "Fast" => 1.3 }.each do |label, rate| %>
                  <button data-action="tts#setSpeed"
                          data-tts-speed-param="<%= rate %>"
                          class="flex-1 text-sm py-1.5 rounded-lg border transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 <%= rate == 1.0 ? 'bg-indigo-100 border-indigo-400 text-indigo-700 font-semibold' : 'border-stone-200 text-stone-600 hover:bg-stone-50' %>"
                          aria-label="Set speed to <%= label %>">
                    <%= label %>
                  </button>
                <% end %>
              </div>
            </div>

            <%# Regenerate with different voice %>
            <%= form_with url: generate_speech_path(@document), method: :post, class: "space-y-2" do |f| %>
              <div>
                <label for="voice-regen" class="block text-xs font-medium text-stone-500 mb-1">Change voice</label>
                <%= f.select :voice,
                      TTSService::VOICES.keys.map { |v| [v.capitalize, v] },
                      {},
                      id: "voice-regen",
                      class: "w-full text-sm border border-stone-200 rounded-lg px-3 py-1.5 bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
              </div>
              <%= f.submit "Regenerate",
                    class: "w-full text-sm text-indigo-600 font-semibold py-2 px-4 rounded-lg border border-indigo-200 hover:bg-indigo-50 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
            <% end %>

          <% else %>

            <%# ── Generate speech form ─────────────────────────── %>
            <p class="text-sm text-stone-500 mb-3 leading-relaxed">
              Convert this text to natural-sounding audio.
              Speed can be adjusted after generation.
            </p>

            <%= form_with url: generate_speech_path(@document), method: :post, class: "space-y-3" do |f| %>
              <div>
                <label for="voice-select" class="block text-xs font-medium text-stone-500 mb-1">Voice</label>
                <%= f.select :voice,
                      TTSService::VOICES.keys.map { |v| [v.capitalize, v] },
                      {},
                      id: "voice-select",
                      class: "w-full text-sm border border-stone-200 rounded-lg px-3 py-1.5 bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
              </div>
              <%= f.submit "Generate Speech",
                    class: "w-full text-white font-semibold py-2.5 px-4 rounded-lg bg-indigo-600 hover:bg-indigo-500 transition-colors cursor-pointer text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
            <% end %>

            <p class="text-xs text-stone-400 mt-2">Powered by ElevenLabs</p>
          <% end %>
        </div>
      </div>

      <%# ─ Quick actions ──────────────────────────────────────────── %>
      <div class="bg-white rounded-2xl border border-stone-200 shadow-sm overflow-hidden">
        <div class="h-1 bg-gradient-to-r from-emerald-500 to-teal-500" aria-hidden="true"></div>
        <div class="p-4">
          <p class="text-xs font-semibold uppercase tracking-wider text-stone-400 mb-3">Quick actions</p>
          <nav aria-label="Document quick actions" class="space-y-2">

            <% if @document.audio_url.present? %>
              <a href="<%= @document.audio_url %>"
                 download
                 class="action-link-row">
                <svg class="w-4 h-4 text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Download Audio
              </a>
            <% end %>

            <%= link_to results_path(@document), class: "action-link-row" do %>
              <svg class="w-4 h-4 text-stone-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              All Versions
            <% end %>

            <%= link_to upload_path, class: "action-link-row action-link-row-primary" do %>
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Upload New Document
            <% end %>

          </nav>
        </div>
      </div>

    </aside>
    <%# ═══ END LEFT SIDEBAR ════════════════════════════════════════ %>

    <%# ═══ RIGHT CONTENT AREA ════════════════════════════════════════ %>
    <div class="min-w-0">
      <div class="bg-white rounded-2xl border border-stone-200 shadow-sm overflow-hidden"
           data-controller="tabs">

        <%# ── Tab bar ────────────────────────────────────────────── %>
        <div class="border-b border-stone-200 px-2 flex items-center"
             role="tablist"
             aria-label="Content view">
          <button role="tab"
                  class="tab-btn"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch keydown->tabs#keydown"
                  id="tab-readable"
                  aria-controls="panel-readable">
            Readable Version
          </button>
          <button role="tab"
                  class="tab-btn"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch keydown->tabs#keydown"
                  id="tab-original"
                  aria-controls="panel-original">
            Original Text
          </button>
        </div>

        <%# ── Panel 1: Readable ─────────────────────────────────── %>
        <div role="tabpanel"
             id="panel-readable"
             aria-labelledby="tab-readable"
             data-tabs-target="panel"
             data-controller="copy"
             class="p-5 sm:p-7">

          <%# Panel header row %>
          <div class="flex items-center justify-between mb-5">
            <span class="text-xs font-semibold uppercase tracking-wider text-stone-400">
              Dyslexia-optimised
            </span>
            <button data-action="click->copy#copy"
                    class="flex items-center gap-1.5 text-xs font-medium text-stone-500 hover:text-indigo-600
                           py-1.5 px-3 rounded-lg border border-stone-200 hover:border-indigo-200
                           transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    aria-label="Copy readable version text to clipboard">
              <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              <span data-copy-target="feedback">Copy Text</span>
            </button>
          </div>

          <%# Readable content %>
          <div data-copy-target="source"
               class="reading-content max-w-reading <%= dyslexia_reading_classes(current_user) %>">
            <%= dyslexia_reading_html(
                  @document.selected_content || "Transformation content will appear here.",
                  current_user
                ) %>
          </div>
        </div>

        <%# ── Panel 2: Original ─────────────────────────────────── %>
        <div role="tabpanel"
             id="panel-original"
             aria-labelledby="tab-original"
             data-tabs-target="panel"
             data-controller="copy"
             class="p-5 sm:p-7"
             hidden>

          <%# Panel header row %>
          <div class="flex items-center justify-between mb-5">
            <span class="text-xs font-semibold uppercase tracking-wider text-stone-400">
              Original extracted text
            </span>
            <button data-action="click->copy#copy"
                    class="flex items-center gap-1.5 text-xs font-medium text-stone-500 hover:text-indigo-600
                           py-1.5 px-3 rounded-lg border border-stone-200 hover:border-indigo-200
                           transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    aria-label="Copy original text to clipboard">
              <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              <span data-copy-target="feedback">Copy Text</span>
            </button>
          </div>

          <%# Original content %>
          <div data-copy-target="source"
               class="reading-content prose prose-stone prose-sm max-w-none text-stone-700 bg-amber-50 rounded-xl p-5 leading-relaxed">
            <%= simple_format(@document.original_content || @document.extracted_text || "No original content available.") %>
          </div>
        </div>

      </div><%# end tabs card %>
    </div>
    <%# ═══ END RIGHT CONTENT ═══════════════════════════════════════ %>

  </div><%# end reading-layout %>
</div>
