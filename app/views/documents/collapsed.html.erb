<div class="w-full max-w-3xl mx-auto py-10 px-4">
  <div class="text-center mb-8">
    <%# Celebration checkmark %>
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-green-400 to-emerald-500 shadow-lg shadow-green-500/30 mb-4 animate-celebrate">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
      </svg>
    </div>
    <h1 class="text-4xl font-bold text-gray-900 mb-2 animate-fade-in-up delay-100">Your Optimized Content</h1>
    <% if @document.selected_style %>
      <p class="text-lg text-indigo-600 font-semibold animate-fade-in-up delay-200">You chose: <%= @document.selected_style[:title] %></p>
    <% end %>
  </div>

  <%# Selected transformation displayed prominently %>
  <div class="bg-white rounded-2xl shadow-lg border border-indigo-200 overflow-hidden mb-6 animate-fade-in-up delay-300" data-controller="toggle">
    <div class="bg-gradient-to-r from-indigo-500 to-purple-500 px-6 py-4">
      <% if @document.selected_style %>
        <h2 class="text-lg font-bold text-white"><%= @document.selected_style[:title] %></h2>
        <p class="text-sm text-indigo-100"><%= @document.selected_style[:description] %></p>
      <% end %>
    </div>

    <div class="px-6 py-5">
      <div data-toggle-target="transformed" class="prose max-w-none text-gray-800">
        <%= simple_format(@document.selected_content || "Transformation content will appear here.") %>
      </div>
      <div data-toggle-target="original" class="hidden prose max-w-none bg-amber-50 rounded-lg p-4 text-gray-700">
        <%= simple_format(@document.original_content || @document.extracted_text || "No original content available.") %>
      </div>
    </div>

    <div class="px-6 pb-5">
      <button data-toggle-target="button"
              data-action="toggle#toggle"
              class="text-sm text-indigo-600 font-medium py-2 px-4 rounded-lg border border-indigo-200 hover:bg-indigo-50 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
        Show Original
      </button>
    </div>
  </div>

  <%# Navigation %>
  <div class="flex items-center justify-between animate-fade-in-up delay-400">
    <%= link_to "Back to All Versions", results_path(@document),
          class: "text-indigo-600 font-medium hover:text-indigo-500 transition-colors" %>
    <%= link_to "Upload New Document", upload_path,
          class: "inline-block text-white font-semibold py-2 px-6 rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 shadow-lg hover:shadow-xl transition-all focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
</div>
